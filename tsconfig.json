{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./core/*"],
      "@services/*": ["./services/*", "./core/services/*"],
      "@models/*": ["./models/*", "./core/models/*"],
      "@constants/*": ["./constants/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
